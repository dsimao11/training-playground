pipeline {
	    agent none
	    stages {
		stage('build') {
			parallel {
				stage('buildMaven') {
					agent {
						docker {
							image 'maven:3.3.3'
						}
					}
					steps {
						sh "mvn --version"
					}
				}
				stage('buildNpm') {
					agent {
						docker {
							image 'node:6.3'
						}
					}
					steps {
						sh "npm --version"
					}
				}
			}
		}
	}
}
