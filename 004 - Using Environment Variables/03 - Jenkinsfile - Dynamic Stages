pipeline {
    agent { 
		docker { 
			image 'alpine:latest' 
		}
	}
	environment {
		JSONVAR = '''
		[
			{name: "Java", command: "echo 'Somos os Maiores'"},
			{name: "Node", command: "echo 'So que nao'"}
		]
		'''
	}
    stages {
        stage('build') {
            steps {
                script {
                	def buildConfigs = readJSON text: "$JSONVAR"
                	buildConfigs.each{ buildConfig ->
                		stage(buildConfig.name) {
					steps {
                				script {
							sh "echo '$buildConfig.command"
						}
					}
				}
			}
                }
            }
        }
    }
}
